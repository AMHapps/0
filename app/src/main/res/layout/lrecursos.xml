<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/boto7.1"
            android:background="@drawable/wca"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/re2"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/boto7.2"
            android:background="@drawable/timer"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/re3"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/boto7.3"
            android:background="@drawable/cubecomps"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/re4"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_margin="13sp"/>
    </LinearLayout>




 </LinearLayout>
