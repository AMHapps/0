<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:text="0:00:000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textcrono"
            android:textSize="85dp"
            android:textStyle="bold"
            android:textColor="#444847"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/cronostart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:text="@string/crono1"
            android:textSize="25sp"
            android:backgroundTint="#8c44caff"
            />

        <Button
            android:id="@+id/cronopause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/crono2"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:backgroundTint="#92ff6d44"
            android:textSize="25sp"
            />



    </LinearLayout>


</LinearLayout>